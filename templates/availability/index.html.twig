{% extends 'base.html.twig' %}

{% block title %}Availability index{% endblock %}

{% block body %}
    <h1>Availability index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Branch</th>
                <th>Workdate</th>
                <th>Hours</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for availability in availabilities %}
            <tr>
                <td>{{ availability.id }}</td>
                <td>{{ availability.branch }}</td>
                <td>{{ availability.workdate ? availability.workdate|date('Y-m-d') : '' }}</td>
                <td>{{ availability.hours }}</td>
                <td>
                    <a href="{{ path('availability_show', {'id': availability.id}) }}">show</a>
                    <a href="{{ path('availability_edit', {'id': availability.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('availability_new') }}">Create new</a>
    <a href="{{ path('availability_batch') }}">Create new batch</a>

{% endblock %}
