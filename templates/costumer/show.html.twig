{% extends 'base.html.twig' %}

{% block title %}Klant{% endblock %}

{% block body %}
    <h1>Klant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ costumer.id }}</td>
            </tr>
            <tr>
                <th>Voornaam</th>
                <td>{{ costumer.firstname }}</td>
            </tr>
            <tr>
                <th>Achternaam</th>
                <td>{{ costumer.lastname }}</td>
            </tr>
            <tr>
                <th>Prefix</th>
                <td>{{ costumer.prefix }}</td>
            </tr>
            <tr>
                <th>Straat</th>
                <td>{{ costumer.street }}</td>
            </tr>
            <tr>
                <th>Huisnummer</th>
                <td>{{ costumer.housenumber }}</td>
            </tr>
            <tr>
                <th>Postcode</th>
                <td>{{ costumer.postalcode }}</td>
            </tr>
            <tr>
                <th>Plaats</th>
                <td>{{ costumer.city }}</td>
            </tr>
            <tr>
                <th>Telefoonnummer</th>
                <td>{{ costumer.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ costumer.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('costumer_index') }}">Terug naar lijst</a>

    <a href="{{ path('costumer_edit', {'id': costumer.id}) }}">Aanpassen</a>

    {{ include('costumer/_delete_form.html.twig') }}
{% endblock %}
